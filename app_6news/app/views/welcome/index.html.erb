<% generate_news %>

<div class="wrapper"></div>

<div id="focusView" class="focusView">
	<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
	<a id="focus-view-title"></a>
	<hr>
	<p id="focus-view-body"></p>
</div>

<div class="container-fluid">

	<div class="row">

		<div class="col-xs-3">
		    <nav id="sidebar">
		        <!-- Sidebar Header -->
		        <div class="sidebar-header">
		            <h3>Lota Nuus</h3>
		        </div>

		        <!-- Sidebar Links -->
		        <ul class="list-unstyled components">
		            <li class="active"><a >Home</a></li>
		            <li><a >Login</a></li>
		            <li><a >About</a></li>
		        </ul>
		    </nav>
		</div>	
	
		<div class="col-xs-9 tone-a-1">
	    	<% for i in 1..5 %>
		    		<div class="row">
		    			<div class="col-xs-12">
					 		<!-- Carousel --> 
						    <div id="text-carousel<%="#{i}"%>" class="carousel slide" data-ride="carousel">
							    <!-- Wrapper for slides -->
					            <div id="text-carousel-inner<%="#{i}"%>" class="carousel-inner">
		        					<div class="item active">
					                    <div class="carousel-content tone-a-1">
					                        <div>
					                            <p onclick="openNav(this)">
						                           	<%= news_get_title(0) %>
					                            </p>
					                        </div>
					                    </div>
					                </div>
					                <% for j in 1..4 %>
	                					<div class="item">
						                    <div class="carousel-content tone-a-1">
						                        <div>
						                            <p onclick="openNav(this)">
						                            	 <%= news_get_title(j) %>
						                            </p>
						                        </div>
						                    </div>
						                </div>
		 							<% end %>
					            </div>
							</div>
				    	</div>
					</div>
		 	<% end %>


		 	<div class="bottom-arrows">
				<div class="row">
					<div id="click-prev" class="col-xs-12 carousel-arrow-prev arrow-text">
					   	<p>< <</p>	
					</div>
				</div>
				<div class="row">
					<div id="click-next" class="col-xs-12  carousel-arrow-next arrow-text">
					   	<p>> ></p>	
					</div>
				</div>
		 	</div>

	 	</div>

	</div>

</div>

